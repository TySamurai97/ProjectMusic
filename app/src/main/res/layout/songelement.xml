<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/element" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/songimage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/default_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/songimage"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/songimage"
            android:layout_toRightOf="@+id/songimage"
            android:maxLength="30"
            android:maxLines="1"
            android:text="artist" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/artist"
            android:layout_alignLeft="@+id/artist"
            android:layout_alignStart="@+id/artist"
            android:maxLength="30"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>